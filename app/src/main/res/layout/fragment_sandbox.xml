<?xml version="1.0" encoding="utf-8"?>
<com.sungbin.autoreply.bot.three.view.ui.drawerlayout.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/dl_layout"
        android:background="@color/colorWhite"
        android:layout_marginTop="@dimen/margin_half"
        android:layout_marginBottom="@dimen/margin_half"
        android:overScrollMode="never"
        android:scrollbars="none"
        tools:openDrawer="start">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/lav_swipe"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:lottie_repeatCount="100"
                    app:lottie_colorFilter="@color/colorPrimary"
                    app:lottie_rawRes="@raw/swipe_left_right" />

            <TextView
                    android:id="@+id/tv_guide"
                    android:layout_marginBottom="100dp"
                    android:layout_gravity="bottom"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:text="@string/swipe_screen_right_to_left"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <RelativeLayout
                    android:id="@+id/rl_layout"
                    android:visibility="invisible"
                    android:layout_marginStart="@dimen/margin_default"
                    android:layout_marginEnd="@dimen/margin_default"
                    android:background="@color/colorWhite"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:ignore="UselessParent">

                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_list"
                        android:layout_above="@id/ll_send"
                        android:layout_marginTop="@dimen/margin_default"
                        android:layout_marginBottom="@dimen/margin_default"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layoutAnimation="@anim/layout_animation"
                        android:overScrollMode="never" />

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/ll_send"
                        android:maxHeight="150dp"
                        android:layout_alignParentBottom="true"
                        android:weightSum="5">

                    <EditText
                            android:fontFamily="@font/nanumgothic"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/string_input"
                            android:maxHeight="150dp"
                            tools:height="150dp"
                            android:id="@+id/et_input"
                            android:layout_weight="1"
                            android:inputType="textMultiLine"
                            android:importantForAutofill="no" />

                    <ImageButton
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:contentDescription="@string/string_send"
                            android:background="@null"
                            android:tint="@color/colorPrimary"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            android:id="@+id/ib_send"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_send_white_24dp"
                            android:layout_weight="4" />

                </LinearLayout>

            </RelativeLayout>

        </FrameLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <com.google.android.material.navigation.NavigationView
            android:id="@+id/nv_navigation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:layout_gravity="start|left"
            android:overScrollMode="never"
            android:scrollbars="none"
            tools:ignore="RtlHardcoded"/>

</com.sungbin.autoreply.bot.three.view.ui.drawerlayout.DrawerLayout>