<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:padding="@dimen/margin_default"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_database_view"
        tools:ignore="MissingConstraints,RtlSymmetry,RelativeOverlap,Autofill,LabelFor,ContentDescription">

    <com.paulvarry.jsonviewer.JsonViewer
            android:id="@+id/jv_viewer"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    <EditText
            android:visibility="gone"
            android:fontFamily="@font/nanumgothic"
            android:id="@+id/et_viewer"
            android:textColor="@color/colorBlack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine" />

</androidx.constraintlayout.widget.ConstraintLayout>